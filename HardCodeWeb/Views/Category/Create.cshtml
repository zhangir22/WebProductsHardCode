@model HardCodeWeb.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<h1>Create</h1>
@Html.
<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">  
        <form   method="post" asp-action="Category/Create"> 
       
  
                <div class="form-group">
                    <label  class="control-label"></label>
                    <input asp-for="Name" name="Name" class="form-control" placeholder="Name category"/>
                    <span class="text-danger"></span>
                </div>
        

                <div id="result" class="form-group">
                    <label class="control-label">Write attribute</label>
                    <input id="finish" name="Additional" asp-for="Additional" class="form-control" placeholder="color,weight..."/>
                    <span  class="text-danger"></span>
                </div>
           
            <div class="form-group">
                <input id="create" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
 
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
